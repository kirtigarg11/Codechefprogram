#include <iostream>

using namespace std;

int main()
{
  int n;
  cin>>n;
  int a=n/2;
  int b=a+1;
    int k=0;
  for(int i=1;i<n;i++){
      if(i<=n){
          for(int j=1;j<=n-i;j++){
              cout<<" ";
          }
      }
      int j=1;
    while(j<i){
        cout<<j;
        j++;
    }
          while(j>=1 ){
        cout<<j;
        j--;
    }
      
      cout<<"\n";
  }

    return 0;
}
